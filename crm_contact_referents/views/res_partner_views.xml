<odoo>
  <record id="view_partner_form_inherit_referentes" model="ir.ui.view">
    <field name="name">res.partner.form.referentes</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="priority">30</field>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Referentes" name="referentes_page">
          <field name="referente_ids"
                 mode="kanban,form"
                 context="{
                   'kanban_view_ref':'crm_contact_referents.view_res_partner_referente_kanban_ccr',
                   'form_view_ref':'crm_contact_referents.view_res_partner_referente_form_ccr'
                 }"/>
        </page>
      </xpath>
    </field>
  </record>
</odoo>

