<odoo>
  <record id="view_crm_referente_wizard_form" model="ir.ui.view">
    <field name="name">crm.referente.wizard.form</field>
    <field name="model">crm.referente.wizard</field>
    <field name="arch" type="xml">
      <form string="Buscar/Crear Referente">
        <group>
          <field name="partner_id" readonly="1"/>
          <field name="lead_id" invisible="1"/>
          <field name="phone"/>
          <field name="name"/>
          <field name="relation"/>
          <field name="observations"/>
        </group>
        <footer>
          <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
          <button string="Cancelar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
