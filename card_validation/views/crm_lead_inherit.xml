<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_crm_lead_form_ckt_card_validation" model="ir.ui.view">
    <field name="name">crm.lead.form.ckt.card.validation</field>
    <field name="model">crm.lead</field>
    <!-- FIX: heredar del form actual en Odoo 18 -->
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Validaciones de Tarjeta" name="page_ckt_card_validations" groups="base.group_user">
          <!-- Sin sub-arquitectura: usa la vista del comodel -->
          <field name="cktc_card_validation_ids" string="Registros" context="{}"/>
        </page>
      </xpath>
    </field>
  </record>
</odoo>

