<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_partner_form_ckt_card_validation" model="ir.ui.view">
    <field name="name">res.partner.form.ckt.card.validation</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Validaciones de Tarjeta" name="page_ckt_card_validations" groups="base.group_user">
          <!-- Sin sub-arquitectura: usa la vista del comodel -->
          <field name="cktc_card_validation_ids" string="Registros" context="{}"/>
        </page>
      </xpath>
    </field>
  </record>
</odoo>

