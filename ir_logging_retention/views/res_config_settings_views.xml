<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_res_config_settings_ir_logging_retention" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.ir.logging.retention</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.view_res_config_settings"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="Logging" string="Logging" data-key="ir_logging_retention" groups="base.group_system">
          <h2>Retención de ir.logging</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6">
              <div class="o_setting_box">
                <div class="o_setting_left_pane">
                  <field name="ir_logging_retention_days"/>
                </div>
                <div class="o_setting_right_pane">
                  <label for="ir_logging_retention_days"/>
                  <div class="text-muted">
                    Define cuántos días conservar en <code>ir.logging</code>. 0 deshabilita el borrado.
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
