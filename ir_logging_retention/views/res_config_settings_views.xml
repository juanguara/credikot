<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_ir_logging_retention" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ir.logging.retention</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Logging" data-string="Logging" name="ir_logging_retention" groups="base.group_system">
                    <block title="Retención de ir.logging">
                        <setting string="Días a conservar">
                            <field name="ir_logging_retention_days" class="w-50"/>
                            <div class="text-muted">
                                Define cuántos días conservar en <code>ir.logging</code>. 0 deshabilita el borrado automático.
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
