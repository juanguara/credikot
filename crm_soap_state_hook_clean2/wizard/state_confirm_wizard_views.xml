<odoo>
    <record id="view_crm_soap_state_confirm_wizard_form" model="ir.ui.view">
        <field name="name">crm.soap.state.confirm.wizard.form</field>
        <field name="model">crm.soap.state.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmación">
                <sheet>
                    <group>
                        <field name="message" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm"
                            type="object"
                            string="Sí"
                            class="btn-primary"/>
                    <button name="action_cancel"
                            type="object"
                            string="No"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
